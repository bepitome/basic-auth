{
    "name": "bauth",
    "version": "1.0.0",
    "description": "Basic authentication backend simulation",
    "main": "server.js",
    "scripts": {
        "prepare": "husky install && npm run fixes",
        "fixes": "npm run lint -- --fix && npm run lint",
        "lint": "eslint '**/*.js' --ignore-pattern node_modules/",
        "local": "nodemon server.js",
        "start": "node server.js",
        "docker": "docker compose down -v && docker-compose -f docker-compose.yaml up"
    },
    "keywords": [
        "node",
        "bepitome"
    ],
    "author": "bepitome",
    "license": "ISC",
    "dependencies": {
        "body-parser": "^1.20.0",
        "config": "^3.3.7",
        "express": "^4.18.1",
        "jsonwebtoken": "^8.5.1",
        "mongodb": "^4.7.0",
        "morgan": "^1.10.0",
        "path": "^0.12.7"
    },
    "devDependencies": {
        "dotenv": "^16.0.1",
        "eslint": "^8.19.0",
        "husky": "^8.0.1",
        "nodemon": "^2.0.18",
        "winston": "^3.8.1",
        "winston-logrotate": "^1.3.0"
    }
}